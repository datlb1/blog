<div class="row mt-4">
    {{#each courses}}

    <div class="col">
        <div class="card">
            <a href="/course/{{slug}}"><img src="{{image}}" class="card-img-top" alt="..."> </img> </a>
            <div class="card-body">
                <a class="link-underline link-underline-opacity-0" href="/course/{{slug}}">
                    <h5 class="card-title">{{name}}</h5>
                </a>
                <p class="card-text">{{description}}</p>
                <a href="/course/{{slug}}" class="btn btn-primary">Buy course</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>