<h4 class="text-center mt-4">Danh sách khóa học</h4>
<div class="container d-flex justify-content-center">
    <table class="table mt-3">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Video Id</th>
                <th scope="col">Ngày chỉnh sửa</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <div class="d-flex align-items-center">
                <tr>
                    <th scope="row">{{indexBase @index}}</th>
                    <td>{{name}}</td>
                    <td>{{videoId}}</td>
                    <td>
                        {{#if updatedAt}}
                        {{dateFormat updatedAt}}
                        {{else if createdAt}}
                        {{dateFormat createdAt}}
                        {{/if}}
                    </td>
                    <td>
                        <a class="me-3 btn btn-warning" href="edit/{{videoId}}">Sửa</a>
                        <!-- Button trigger modal -->
                        <button onclick="myFunction('{{name}}')" id="modalButton" type="button" class="btn btn-danger"
                            data-bs-toggle="modal" data-bs-target="#delete-modal">Xóa</button>
                    </td>
                </tr>
            </div>

            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="delete-modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="delete-modalLabel">Xóa khóa học</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="modal-body" class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger">Xóa</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<script>
    function myFunction(name) {
        console.log(name);
        document.getElementById('modal-body').innerHTML = "Bạn có muốn xóa khóa học <b>" + name + "</b> không?"
    }
</script>