<div class="row">
    {{#each courses}}
    <div class="col-3 mt-4">
        <div class="card h-100">
            <a href="/course/{{slug}}"><img src="https://img.youtube.com/vi/{{videoId}}/maxresdefault.jpg"
                    class="card-img-top" alt="..."> </img> </a>
            <div class="card-body d-flex flex-column">
                <a class="link-underline link-underline-opacity-0" href="/course/{{slug}}">
                    <h5 class="card-title">{{name}}</h5>
                </a>
                <p class="card-text">{{description}}</p>
                <div class="d-flex justify-content-center mt-auto">
                    <a href="/course/{{slug}}" class="btn btn-primary">Đăng ký khóa học</a>
                </div>

            </div>
        </div>
    </div>
    {{/each}}
</div>